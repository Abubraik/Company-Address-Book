@using Company_Address_Book.Models.ViewModels
@model AddCompanyViewModel
@{
    ViewData["Title"] = "Add Company";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Company</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Add Company</h2>
        <form action="/home/AddCompany" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label for="CompanyName">Company Name</label>
                <input asp-for="CompanyName" required>
            </div>
            <div class="form-group">
                <label for="NumOfContacts">Number of Contacts</label>
                <input asp-for="NumberOfContacts" required>
            </div>
            <div class="form-group">
                <label for="MaxContactAge">Max Contact Age</label>
                <input asp-for="ContactMaxAge" required>
            </div>
         
            <button type="submit" class="btn btn-primary">Create Company</button>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
